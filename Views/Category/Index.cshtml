@model List<Category>
@{
ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">
                Category List
            </h2>
        </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-dark"><i class="bi bi-plus-circle"></i> Create New Category</a>
            </div>
    </div>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach(var category in Model.OrderBy(c=>c.DisplayOrder))
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => category.DisplayOrder)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
